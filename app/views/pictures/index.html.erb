<h1>ホーム</h1>
<p><%= notice %></p>
<table>
  <tr>

    <th>内容</th>
    <th>ユーザー名</th>
  </tr>
<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.content %></td>
    <td><%= picture.user.name %></td>
    <td><%= link_to '投稿を確認する', picture_path(picture.id) %></td>
    <td><%= link_to "投稿を編集する", edit_picture_path(picture.id), data: { confirm: '本当に編集していいですか？'} %></td>
    <td><%= link_to '投稿を削除する', picture_path(picture.id), method: :delete ,data: { confirm: '本当に削除していいですか？'} %></td>
  </tr>
<% end %>
</table>
<br>
<%= link_to 'Pictureを投稿する', new_picture_path %>
