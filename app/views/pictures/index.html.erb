<h1><span class="label label-primary">Home</span></h1>
<hr>


<div class="row">
<% @pictures.each do |picture| %>
  <div class="col-md-3">
    <div class="card">
      <p>投稿者：<%= picture.user.name %></p>
      <p>内容：<%= picture.content %></p>
      <p><%= image_tag(picture.image.url), class: 'card-img-top' %></p> 
      <span><%= link_to '投稿を確認する', picture_path(picture.id) %></span>
      <span><%= link_to "投稿を編集する", edit_picture_path(picture.id), data: { confirm: '本当に編集していいですか？'} %></span>
      <span><%= link_to '投稿を削除する', picture_path(picture.id), method: :delete ,data: { confirm: '本当に削除していいですか？'} %></span>
    </div>
  </div>  
<% end %>
</div>



